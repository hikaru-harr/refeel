{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"strict": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": [
			"node"
		],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@refeel/shared": [
				"packages/shared/src/index.ts"
			],
			"@refeel/shared/*": [
				"packages/shared/src/*"
			]
		}
	},
	"exclude": [
		"node_modules"
	],
}